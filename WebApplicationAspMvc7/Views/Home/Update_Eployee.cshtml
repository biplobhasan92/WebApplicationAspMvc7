
@model global::WebApplicationAspMvc7.Models.Employee

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update Eployee</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="main">
        <div class="container">
            <form method="post">
                <div class="row" style="margin-bottom:150px;">
                    <div class="col-md-2"></div>
                    <div class="col-md-3">

                    </div>
                    <div class="col-md-5">
                        <br />
                        <h2>Update Employee</h2>
                        <br />
                        <br />
                    </div>
                    <div class="col-md-2"></div>
                </div>
                <div class="row">
                    <div class="col-md-4"></div>
                    <div class="col-md-2">
                        <a href="@Url.Action("Display_Employee", "Home")">
                            <span>Display Data</span>
                        </a>
                    </div>
                    <div class="col-md-2"></div>
                    <div class="col-md-4"></div>
                </div>


                <div class="row" style="margin-bottom:30px;">
                    <div class="col-md-2"></div>
                    <div class="col-md-3">
                        <label>Name</label>
                    </div>
                    <div class="col-md-5">
                        <input name="Emp_id" value="@Model.Emp_id" class="form-control" />
                        <input name="Name" value="@Model.Name" class="form-control" />
                    </div>
                    <div class="col-md-2"></div>
                </div>

                <div class="row" style="margin-bottom:30px;">
                    <div class="col-md-2"></div>
                    <div class="col-md-3">
                        <label>Select Department</label>
                    </div>
                    <div class="col-md-5">
                        @Html.DropDownList("Dept_Id", new SelectList(Model.deptInfo, "Dept_Id", "Dept_name", Model.Department_id), new { @class = "form-control" })                        
                    </div>
                    <div class="col-md-2"></div>
                </div>

                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-3">
                        <label>Gender</label>
                    </div>
                  
                    <div class="col-md-5">
                        Male:  @Html.RadioButtonFor(model => model.Gender, "Male", Model.Gender == "Male" ? new { @Checked = "checked" } : null)
                        Female:  @Html.RadioButtonFor(model => model.Gender, "Female", Model.Gender == "Female" ? new { @Checked = "checked" } : null)
                        
                    </div>
                    <div class="col-md-2"></div>
                </div>

                <div class="row" style="margin-bottom:30px;">
                    <div class="col-md-2"></div>
                    <div class="col-md-3">
                        <label>Email</label>
                    </div>
                    <div class="col-md-5">
                        <input type="email" name="Email" value="@Model.Email" class="form-control" />
                    </div>
                    <div class="col-md-2"></div>
                </div>

