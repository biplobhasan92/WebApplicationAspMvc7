
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Display_Employee</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="main">
        <div class="container">
            <div class="row">
                <div class="col-lg-4"></div>
                <div class="col-lg-4">
                    <br />
                    <h2>Display All Employee</h2>
                    <br />
                    <br />
                </div>
                <div class="col-lg-4"></div>
            </div>

            <div class="row">
                <div class="col-lg-4"></div>
                <div class="col-lg-2">
                    <a href="@Url.Action("","")" class="element">
                        <span>Goto Add Employee</span>
                    </a>
                </div>
                <div class="col-lg-2"></div>
                <div class="col-lg-4"></div>
            </div>
        </div>
        <div class="container">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>EmpID</th>
                            <th>Name</th>
                            <th>Department</th>
                            <th>Email</th>
                            <th>Gender</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ 
                            foreach (System.Data.DataRow dr in ViewBag.epmlist.Rows)
                            {
                                <tr>
                                    <td>@dr["Emp_id"]</td>
                                    <td>@dr["Name"]</td>
                                    <td>@dr["Dept_name"]</td>
                                    <td>@dr["Email"]</td>
                                    <td>@dr["Gender"]</td>
                                    <td>
                                        <a href="/Home/Update_Eployee?id=@dr["Emp_id"]">Edit</a>
                                    </td>
                                    <td>
                                        
                                        <a href="@Url.Action("Delete_Eployee", "Home", new { id = @dr["Emp_id"] })" onclick="return confirm('Do you want to Delete the Record ?')">Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
